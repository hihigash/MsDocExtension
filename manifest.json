{
  "manifest_version": 3,
  "name": "Microsoft Document Extension",
  "description": "This is a Simple Browser extension for Microsoft document.",
  "version": "0.1.0",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "permissions": ["scripting", "tabs"],
  "host_permissions": ["https://learn.microsoft.com/*"],
  "background": {
    "service_worker": "scripts/background.ts"
  },
  "action": {
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  }
}
